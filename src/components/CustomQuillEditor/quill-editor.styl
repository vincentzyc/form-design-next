.quill-editor {
  width: 100%;
  position: relative;

  .ql-container {
    width: 100%;
  }

  .ql-toolbar > span, .ql-toolbar > button {
    background: none;
    border: none;
    cursor: pointer;
    display: inline-block;
    height: 26px;
    width: 30px;
    padding: 3px 5px;
  }

  .ql-toolbar > span > *:first-child, .ql-toolbar > button > *:first-child {
    width: 100%;
    height: 100%;
  }

  .el-color-picker__trigger {
    border: none;
  }

  .el-color-picker__color {
    display: none;
  }

  .ql-picker-label {
    border: none !important;
    padding-left: 0;
    padding-right: 0;
  }

