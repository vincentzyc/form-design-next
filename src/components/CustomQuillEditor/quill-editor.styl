.quill-editor {
  width: 100%;
  position: relative;

  .ql-container {
    width: 100%;
    min-height: 150px;
  }

  .ql-toolbar {
    .ql-item, button {
      height: 26px;
      width: 30px;
      background: none;
      border: none;
      cursor: pointer;
      display: inline-block;
      float: left;
      margin: 1px;

      &:hover {
        background-color: #f3f4f6;
      }

      .ql-picker {
        width: 100%;
        height: 100%;
        margin: 0;

        .ql-picker-label, .el-color-picker {
          display: flex;
          justify-content: center;
          align-items: center;
          border: none !important;
          padding-left: 0;
          padding-right: 0;

          & > svg {
            width: 20px;
            height: 20px;
          }
        }
      }

      .ql-custom-picker {
        .ql-picker-label, .el-color-picker {
          &::before {
            font-size: 20px;
          }

          & > svg {
            display: none;
          }
        }

        .ql-picker-options {
          .ql-picker-item {
            padding: 0 5px;
            line-height: 30px;

            &:before {
              content: attr(data-value);
            }
          }
        }
      }
    }
  }

  .el-color-picker__trigger {
    display: none;
  }

  .ql-color-picker>.el-color-picker::before {
    content: 'A';
    font-weight: bold;
  }

  .ql-picker.ql-size > .ql-picker-label::before {
    content: 'T';
    font-weight: bold;
  }

  .ql-picker.ql-lineHeight > .ql-picker-label::before {
    content: 'L';
    font-weight: bold;
  }

  .ql-picker.ql-textIndent > .ql-picker-label::before {
    content: '';
    width: 20px;
    height: 20px;
    background: url('data:image/png;base64,') 0 0 / 100% 100% no-repeat;
    font-weight: bold;
  }

  .ql-picker.ql-textIndent > .ql-picker-label.ql-active::before {
    background-image: url('data:image/png;base64,');
  }
}