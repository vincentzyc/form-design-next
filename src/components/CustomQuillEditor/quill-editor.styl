  .ql-picker.ql-size > .ql-picker-label, .ql-picker.ql-textIndent > .ql-picker-label, .ql-picker.ql-lineHeight > .ql-picker-label {
    &::before {
      position: absolute;
      top: 0;
      bottom: 0;
      left: -3px;
      right: 0;
      color: #333;
      font-size: 20px;
    }

    & > svg {
      display: none;
    }
  }

  .ql-picker.ql-size > .ql-picker-label::before {
    content: 'T';
    font-weight: bold;
  }

