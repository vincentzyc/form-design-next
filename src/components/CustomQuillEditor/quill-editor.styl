.quill-editor {
  width: 100%;
  position: relative;

  .ql-container {
    width: 100%;
  }

  .ql-toolbar {
    .ql-item, button {
      height: 26px;
      width: 30px;
      background: none;
      border: none;
      cursor: pointer;
      display: inline-block;
      float: left;
      margin-left: 0;
      margin-right: 0;

      &:hover {
        background-color: #f3f4f6;
      }

      .ql-picker {
        width: 100%;
        height: 100%;
        margin-left: 0;
        margin-right: 0;

        .ql-picker-label {
          display: flex;
          justify-content: center;
          align-items: center;
          border: none !important;
          padding-left: 0;
          padding-right: 0;

          & > svg {
            width: 20px;
            height: 20px;
          }
        }
      }

      .ql-custom-picker {
        .ql-picker-label {
          &::before {
            font-size: 20px;
          }

          & > svg {
            display: none;
          }
        }

        .ql-picker-options {
          .ql-picker-item {
            padding: 0 5px;
            line-height: 30px;

            &:before {
              content: attr(data-value);
            }
          }
        }
      }
    }
  }

